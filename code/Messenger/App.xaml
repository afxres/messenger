<Application x:Class="Messenger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Entrance.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Collection.xaml" />
                <ResourceDictionary Source="Resources/Container.xaml" />
                <ResourceDictionary Source="Resources/General.xaml" />
                <ResourceDictionary Source="Resources/Geometry.xaml" />
                <ResourceDictionary Source="Resources/Validation.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
